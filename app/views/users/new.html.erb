<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
            <%= form_for @user, :html => {:class => "form-signin"} do |f| %>
              <div class="form-label-group">
                <%= f.text_field :name, class:"form-control", required:""  %>
                <%= f.label :name %>
              </div>
              <div class="form-label-group">
                <%= f.text_field :username, class:"form-control", required:""  %>
                <%= f.label :username %>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password, class:"form-control", required:""  %>
                <%= f.label :password %>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password_confirmation, class:"form-control", required:""  %>
                <%= f.label :password_confirmation %>
              </div>
              <%= f.submit "Sign Up", class:"btn btn-lg btn-primary btn-block text-uppercase"%>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>